{
  "name": "btm-travel-crm",
  "version": "1.0.0",
  "description": "BTM Travel CRM with MongoDB Backend",
  "scripts": {
  "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
  "dev:frontend": "vite",
  "dev:backend": "cd backend && deno run --allow-net --allow-env --allow-read --allow-write --allow-sys server.tsx",
  "start": "npm run dev",
  "backend": "cd backend && deno run --allow-net --allow-env --allow-read --allow-write --allow-sys server.tsx",
  "build": "vite build",
  "preview": "vite preview"
}
,
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
